{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory name",
            "defaultValue": "cloud-dev-adf"
        },
        "ls_sql_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'ls_sql'"
        },
        "ls_adl_accountKey": {
            "type": "secureString",
            "metadata": "Secure string for 'accountKey' of 'ls_adl'"
        },
        "ls_sql_properties_typeProperties_server": {
            "type": "string",
            "defaultValue": "cloudsqldbserver01.database.windows.net"
        },
        "ls_sql_properties_typeProperties_database": {
            "type": "string",
            "defaultValue": "sqldb"
        },
        "ls_sql_properties_typeProperties_userName": {
            "type": "string",
            "defaultValue": "sebastian"
        },
        "ls_adl_properties_typeProperties_url": {
            "type": "string",
            "defaultValue": "https://cloudadl.dfs.core.windows.net/"
        },
        "containerUri": {
            "type": "string",
            "metadata": "URI to storage account containing linked ARM templates"
        },
        "containerSasToken": {
            "type": "string",
            "metadata": "Sas token to storage account containing linked ARM templates"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "cloud-dev-adf_ArmTemplate_0",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2024-03-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[parameters('factoryName')]"
                    },
                    "ls_sql_password": {
                        "value": "[parameters('ls_sql_password')]"
                    },
                    "ls_adl_accountKey": {
                        "value": "[parameters('ls_adl_accountKey')]"
                    },
                    "ls_sql_properties_typeProperties_server": {
                        "value": "[parameters('ls_sql_properties_typeProperties_server')]"
                    },
                    "ls_sql_properties_typeProperties_database": {
                        "value": "[parameters('ls_sql_properties_typeProperties_database')]"
                    },
                    "ls_sql_properties_typeProperties_userName": {
                        "value": "[parameters('ls_sql_properties_typeProperties_userName')]"
                    },
                    "ls_adl_properties_typeProperties_url": {
                        "value": "[parameters('ls_adl_properties_typeProperties_url')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}